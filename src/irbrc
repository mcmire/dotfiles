class Irbrc
  def run
    add_awesome_print
    init_irb
  end

  def add_awesome_print
    require 'awesome_print'
    AwesomePrint.irb!
  rescue LoadError
  end

  def init_irb
    require 'irb/completion'
    require 'irb/ext/save-history'
    ARGV.concat [ "--readline", "--prompt-mode", "simple" ]
    IRB.conf[:SAVE_HISTORY] = 100
    IRB.conf[:HISTORY_FILE] = "#{ENV['HOME']}/.irb-save-history"
  end

  def with_gem(name)
    require name
    yield
  rescue LoadError
    warning <<EOT
Could not load gem #{name.inspect}.
If you are running within a `bundle exec` session, please make sure this gem is in your Gemfile.
I will keep on rolling...
EOT
  end

  def warning(msg)
    puts
    puts "\e[33mWarning:\e[0m #{msg}"
    puts
  end

  def error(status, msg)
    puts
    puts "\e[31mERROR!\e[0m #{msg}"
    puts
    exit status
  end
end

Irbrc.new.run
